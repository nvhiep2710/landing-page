mixin workCardItem(image, title, desc, msAos)
  .work-item(data-aos="fade-up", data-aos-duration=msAos)
    .work-image
      img(srcset= image)
    h5= title
    p.work-desc.caption-desc= desc

mixin projectCardItem1(image, title, desc)
  .project-card-large
    .image
      img(srcset= image)
    .mask 
      .mask-content
        h6= title
        p.caption-desc= desc
        a.caption-desc.link(href="#")
          span View portfolio
          ion-icon(name='arrow-forward-outline') 

